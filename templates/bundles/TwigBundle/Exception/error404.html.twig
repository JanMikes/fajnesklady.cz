{% extends 'base.html.twig' %}

{% block title %}Page Not Found - Fajn√© Sklady{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body text-center">
            <div class="text-6xl mb-4">üîç</div>
            <h1 class="card-title text-3xl justify-center mb-2">404 - Page Not Found</h1>
            <p class="text-base-content/70 mb-6">
                Sorry, we couldn't find the page you're looking for.
                It might have been moved or doesn't exist.
            </p>

            <div class="card-actions justify-center gap-2 flex-wrap">
                <a href="{{ path('app_home') }}" class="btn btn-primary">
                    Go to Homepage
                </a>
                {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_profile') }}" class="btn btn-secondary">
                    My Profile
                </a>
                {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-secondary">
                    Login
                </a>
                {% endif %}
                <button onclick="history.back()" class="btn btn-ghost">
                    Go Back
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
