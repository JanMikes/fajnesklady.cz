{% extends 'base.html.twig' %}

{% block title %}Page Not Found - Fajn√© Sklady{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4 bg-gray-50">
    <div class="card w-full max-w-md">
        <div class="card-body text-center">
            <div class="text-6xl mb-4">üîç</div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">404 - Page Not Found</h1>
            <p class="text-gray-600 mb-6">
                Sorry, we couldn't find the page you're looking for.
                It might have been moved or doesn't exist.
            </p>

            <div class="flex justify-center gap-2 flex-wrap">
                <a href="{{ path('app_home') }}" class="btn btn-primary">
                    Go to Homepage
                </a>
                {% if is_granted('ROLE_USER') %}
                <a href="{{ path('app_profile') }}" class="btn btn-secondary">
                    My Profile
                </a>
                {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-secondary">
                    Login
                </a>
                {% endif %}
                <button onclick="history.back()" class="btn btn-ghost">
                    Go Back
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
