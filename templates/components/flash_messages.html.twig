{% set flashes = app.flashes %}
{% if flashes|length > 0 %}
<div class="fixed top-4 right-4 z-50 flex flex-col gap-3 max-w-md w-full pointer-events-none" aria-live="polite">
    {% for label, messages in flashes %}
        {% for message in messages %}
            <div
                x-data="{ show: true }"
                x-show="show"
                x-init="setTimeout(() => show = false, 8000)"
                x-transition:enter="transform transition ease-out duration-300"
                x-transition:enter-start="translate-x-full opacity-0"
                x-transition:enter-end="translate-x-0 opacity-100"
                x-transition:leave="transform transition ease-in duration-200"
                x-transition:leave-start="translate-x-0 opacity-100"
                x-transition:leave-end="translate-x-full opacity-0"
                role="alert"
                data-flash-type="{{ label }}"
                class="pointer-events-auto shadow-lg rounded-lg {% if label == 'success' %}bg-green-50 border border-green-200{% elseif label == 'error' or label == 'danger' %}bg-red-50 border border-red-200{% elseif label == 'warning' %}bg-amber-50 border border-amber-200{% else %}bg-blue-50 border border-blue-200{% endif %}"
            >
                <div class="p-4">
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 {% if label == 'success' %}text-green-500{% elseif label == 'error' or label == 'danger' %}text-red-500{% elseif label == 'warning' %}text-amber-500{% else %}text-blue-500{% endif %}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                {% if label == 'success' %}
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                {% elseif label == 'error' or label == 'danger' %}
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                {% elseif label == 'warning' %}
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                {% else %}
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                {% endif %}
                            </svg>
                        </div>
                        <div class="ml-3 flex-1">
                            <p class="text-sm font-medium {% if label == 'success' %}text-green-800{% elseif label == 'error' or label == 'danger' %}text-red-800{% elseif label == 'warning' %}text-amber-800{% else %}text-blue-800{% endif %}">
                                {{ message }}
                            </p>
                        </div>
                        <div class="ml-4 flex-shrink-0">
                            <button
                                @click="show = false"
                                type="button"
                                class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2 {% if label == 'success' %}text-green-500 hover:bg-green-100 focus:ring-green-600{% elseif label == 'error' or label == 'danger' %}text-red-500 hover:bg-red-100 focus:ring-red-600{% elseif label == 'warning' %}text-amber-500 hover:bg-amber-100 focus:ring-amber-600{% else %}text-blue-500 hover:bg-blue-100 focus:ring-blue-600{% endif %}"
                            >
                                <span class="sr-only">Zavrit</span>
                                <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endif %}
