{# breadcrumb_items: array of {label, url?} - last item is current page (no link) #}
{% if breadcrumb_items is defined and breadcrumb_items|length > 0 %}
{% set parent_url = breadcrumb_items|length > 1 and breadcrumb_items[breadcrumb_items|length - 2].url is defined ? breadcrumb_items[breadcrumb_items|length - 2].url : null %}
<nav class="mb-6" aria-label="Breadcrumb">
    <div class="flex items-center gap-3">
        {% if parent_url %}
            <a href="{{ parent_url }}" class="inline-flex items-center gap-1 px-2.5 py-1 text-sm text-gray-600 border border-gray-300 rounded-md hover:bg-gray-50 hover:text-gray-800 transition-colors">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                ZpÄ›t
            </a>
        {% endif %}
        <ol class="flex items-center gap-1.5 text-sm">
            {% for item in breadcrumb_items %}
                {% if not loop.last %}
                    <li>
                        <a href="{{ item.url }}" class="text-gray-500 hover:text-gray-700">{{ item.label }}</a>
                    </li>
                    <li>
                        <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                        </svg>
                    </li>
                {% else %}
                    <li>
                        <span class="text-gray-900 font-medium">{{ item.label }}</span>
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    </div>
</nav>
{% endif %}
