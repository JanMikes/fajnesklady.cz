{% extends app.user ? 'portal/layout.html.twig' : 'user/layout.html.twig' %}

{% block title %}Objednávka - {{ storageType.name }} - Fajné Sklady{% endblock %}

{% block content %}
    {# Breadcrumb #}
    <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-sm text-gray-600">
            <li><a href="{{ app.user ? path('portal_browse_places') : path('app_home') }}" class="hover:text-accent">{{ app.user ? 'Pobočky' : 'Domů' }}</a></li>
            <li><span class="mx-2">/</span></li>
            <li><a href="{{ app.user ? path('portal_browse_place_detail', {id: place.id}) : path('public_place_detail', {id: place.id}) }}" class="hover:text-accent">{{ place.name }}</a></li>
            <li><span class="mx-2">/</span></li>
            <li class="text-gray-900 font-medium">Objednávka</li>
        </ol>
    </nav>

    <div class="grid lg:grid-cols-3 gap-8">
        {# Order Form #}
        <div class="lg:col-span-2 order-2 lg:order-1">
            <div class="card">
                <div class="card-body">
                    <h1 class="text-2xl font-bold text-gray-900 mb-6">Vytvořit objednávku</h1>

                    {{ form_start(form, {attr: {class: 'space-y-8', 'x-data': '{
                        rentalType: "' ~ (form.vars.data.rentalType ? form.vars.data.rentalType.value : 'limited') ~ '",
                        invoiceToCompany: ' ~ (form.vars.data.invoiceToCompany ? 'true' : 'false') ~ '
                    }'}}) }}

                        {# Contact Information #}
                        <div class="bg-gray-50 rounded-lg p-6">
                            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                Kontaktní údaje
                            </h2>

                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    {{ form_row(form.firstName) }}
                                </div>
                                <div>
                                    {{ form_row(form.lastName) }}
                                </div>
                            </div>

                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    {{ form_row(form.email) }}
                                </div>
                                <div>
                                    {{ form_row(form.phone) }}
                                </div>
                            </div>

                            {% if not app.user %}
                                <div class="mt-4">
                                    {{ form_row(form.plainPassword) }}
                                </div>
                            {% else %}
                                {% do form.plainPassword.setRendered %}
                            {% endif %}
                        </div>

                        {# Billing Information #}
                        <div class="bg-gray-50 rounded-lg p-6">
                            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                </svg>
                                Fakturační údaje
                            </h2>

                            <div class="mb-4">
                                <label class="flex items-center cursor-pointer">
                                    {{ form_widget(form.invoiceToCompany, {attr: {'x-model': 'invoiceToCompany', 'class': 'checkbox checkbox-primary mr-3'}}) }}
                                    <span class="text-sm font-medium text-gray-700">Fakturovat na společnost</span>
                                </label>
                            </div>

                            <div x-show="invoiceToCompany" x-cloak class="space-y-4">
                                <div>
                                    {{ form_row(form.companyId) }}
                                </div>

                                {# Company name and VAT ID #}
                                <div class="grid md:grid-cols-2 gap-4">
                                    <div>
                                        {{ form_row(form.companyName) }}
                                    </div>
                                    <div>
                                        {{ form_row(form.companyVatId) }}
                                    </div>
                                </div>

                                {# Billing address #}
                                <div>
                                    {{ form_row(form.billingStreet) }}
                                </div>

                                <div class="grid md:grid-cols-2 gap-4">
                                    <div>
                                        {{ form_row(form.billingCity) }}
                                    </div>
                                    <div>
                                        {{ form_row(form.billingPostalCode) }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        {# Rental Type #}
                        <div class="bg-gray-50 rounded-lg p-6">
                            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                </svg>
                                Typ pronájmu
                            </h2>

                            <div x-on:change="rentalType = $event.target.value">
                                {{ form_widget(form.rentalType) }}
                            </div>

                            <div class="mt-4 p-4 bg-accent/10 border border-accent/20 rounded-lg" x-show="rentalType === 'unlimited'" x-cloak>
                                <p class="text-sm text-gray-700 mb-3">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    Pronájem na dobu neurčitou s možností ukončení kdykoliv.
                                </p>
                                {{ form_row(form.paymentFrequency) }}
                            </div>
                        </div>

                        {# Dates #}
                        <div class="bg-gray-50 rounded-lg p-6">
                            <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                Období pronájmu
                            </h2>

                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    {{ form_row(form.startDate) }}
                                </div>
                                <div x-show="rentalType === 'limited'">
                                    {{ form_row(form.endDate) }}
                                </div>
                            </div>
                        </div>

                        {# Submit #}
                        <div class="flex items-center justify-between pt-2 border-t border-gray-200">
                            <a href="{{ app.user ? path('portal_browse_place_detail', {id: place.id}) : path('public_place_detail', {id: place.id}) }}" class="inline-flex items-center text-gray-600 hover:text-gray-900">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                </svg>
                                Zpět na výběr
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                Pokračovat k platbě
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                </svg>
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        {# Order Summary Sidebar #}
        <div class="lg:col-span-1 order-1 lg:order-2">
            <div class="card sticky top-24">
                <div class="bg-primary text-white p-4">
                    <h2 class="text-lg font-bold">Shrnutí objednávky</h2>
                </div>
                <div class="card-body">
                    {# Photo gallery #}
                    {% if storageType.hasPhotos %}
                        <div class="mb-4" x-data="{ activePhoto: 0 }">
                            <div class="relative">
                                {% for photo in storageType.photos %}
                                    <img src="{{ asset('uploads/' ~ photo.path) }}"
                                         alt="{{ storageType.name }}"
                                         class="w-full h-48 object-cover rounded-lg"
                                         x-show="activePhoto === {{ loop.index0 }}"
                                         x-cloak>
                                {% endfor %}
                                {% if storageType.photos|length > 1 %}
                                    <button class="absolute left-2 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white rounded-full p-1.5 shadow"
                                            x-on:click="activePhoto = (activePhoto - 1 + {{ storageType.photos|length }}) % {{ storageType.photos|length }}">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                                        </svg>
                                    </button>
                                    <button class="absolute right-2 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white rounded-full p-1.5 shadow"
                                            x-on:click="activePhoto = (activePhoto + 1) % {{ storageType.photos|length }}">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </button>
                                {% endif %}
                            </div>
                            {% if storageType.photos|length > 1 %}
                                <div class="flex justify-center gap-1 mt-2">
                                    {% for photo in storageType.photos %}
                                        <button class="w-2 h-2 rounded-full transition-colors"
                                                :class="activePhoto === {{ loop.index0 }} ? 'bg-accent' : 'bg-gray-300'"
                                                x-on:click="activePhoto = {{ loop.index0 }}"></button>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}

                    <div class="space-y-3 text-sm">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Pobočka</span>
                            <span class="font-medium text-gray-900">{{ place.name }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Typ jednotky</span>
                            <span class="font-medium text-gray-900">{{ storageType.name }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Rozměry</span>
                            <span class="font-medium text-gray-900">{{ storageType.innerDimensionsInMeters }}</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Plocha</span>
                            <span class="font-medium text-gray-900">{{ storageType.floorAreaInSquareMeters|number_format(1, ',', ' ') }} m&sup2;</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Objem</span>
                            <span class="font-medium text-gray-900">{{ storageType.volumeInCubicMeters|number_format(1, ',', ' ') }} m&sup3;</span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="space-y-2">
                        <h3 class="font-semibold text-gray-900">Ceník</h3>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Týdenní sazba</span>
                            <span class="font-semibold text-gray-900">{{ weeklyPrice|number_format(0, ',', ' ') }} Kč</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Měsíční sazba</span>
                            <span class="font-semibold text-accent">{{ monthlyPrice|number_format(0, ',', ' ') }} Kč</span>
                        </div>
                        <p class="text-xs text-gray-500 mt-2 bg-gray-50 p-2 rounded">
                            Pronájem kratší než 4 týdny se účtuje týdenní sazbou,
                            delší pronájem měsíční sazbou (výhodnější).
                        </p>
                    </div>

                    <hr class="my-4">

                    <div class="bg-amber-50 border border-amber-200 p-3 rounded-lg">
                        <p class="text-sm text-amber-800 flex items-start">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span>
                                Skladová jednotka bude přiřazena automaticky po vytvoření objednávky.
                                Máte <strong>7 dní</strong> na dokončení platby.
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
