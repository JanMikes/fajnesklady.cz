{% extends 'user/layout.html.twig' %}

{% block title %}Home - {{ parent() }}{% endblock %}

{% block content %}
    {# Hero Section #}
    <div class="hero min-h-[60vh] bg-base-200 rounded-lg mb-8">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold">Welcome to Fajn√© Sklady</h1>
                <p class="py-6">
                    A modern warehouse management system built with Symfony 7.2 LTS,
                    following clean architecture principles and CQRS pattern.
                </p>
                {% if not app.user %}
                    <div class="flex gap-4 justify-center">
                        <a href="{{ path('app_register') }}" class="btn btn-primary">Get Started</a>
                        <a href="{{ path('app_login') }}" class="btn btn-outline">Login</a>
                    </div>
                {% else %}
                    <div class="flex gap-4 justify-center">
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin_dashboard') }}" class="btn btn-primary">Go to Admin Dashboard</a>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# Features Section #}
    <div class="grid md:grid-cols-3 gap-6 mb-8">
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                    Secure Authentication
                </h2>
                <p>Email verification required, password reset functionality, and role-based access control.</p>
            </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    Clean Architecture
                </h2>
                <p>Built with CQRS pattern using Symfony Messenger for scalable and maintainable code.</p>
            </div>
        </div>

        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    Modern Stack
                </h2>
                <p>PHP 8.4, Symfony 7.2 LTS, PostgreSQL 17, FrankenPHP with worker mode for maximum performance.</p>
            </div>
        </div>
    </div>

    {# Technology Stack #}
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title text-2xl mb-4">Technology Stack</h2>
            <div class="grid md:grid-cols-2 gap-4">
                <div>
                    <h3 class="font-bold mb-2">Backend</h3>
                    <div class="flex flex-wrap gap-2">
                        <div class="badge badge-primary">PHP 8.4</div>
                        <div class="badge badge-primary">Symfony 7.2 LTS</div>
                        <div class="badge badge-primary">PostgreSQL 17</div>
                        <div class="badge badge-primary">Doctrine ORM</div>
                        <div class="badge badge-primary">FrankenPHP</div>
                    </div>
                </div>
                <div>
                    <h3 class="font-bold mb-2">Frontend</h3>
                    <div class="flex flex-wrap gap-2">
                        <div class="badge badge-secondary">Tailwind CSS</div>
                        <div class="badge badge-secondary">DaisyUI</div>
                        <div class="badge badge-secondary">AssetMapper</div>
                        <div class="badge badge-secondary">Stimulus</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
