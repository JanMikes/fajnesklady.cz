{% extends 'portal/layout.html.twig' %}

{% block title %}Změnit heslo{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Změnit heslo</h1>
        <a href="{{ path('portal_profile') }}" class="btn btn-ghost">Zpět</a>
    </div>

    <div class="max-w-2xl">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-4">
                        <label for="{{ form.currentPassword.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Aktuální heslo</label>
                        {{ form_widget(form.currentPassword, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.currentPassword) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="mb-4">
                        <label for="{{ form.newPassword.first.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Nové heslo</label>
                        {{ form_widget(form.newPassword.first, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.newPassword.first) }}
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.newPassword.second.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Nové heslo znovu</label>
                        {{ form_widget(form.newPassword.second, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.newPassword.second) }}
                    </div>

                    {{ form_errors(form.newPassword) }}

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_profile') }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Změnit heslo</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
