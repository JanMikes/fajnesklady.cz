{% extends 'portal/layout.html.twig' %}

{% block title %}Upravit profil{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Upravit profil</h1>
        <a href="{{ path('portal_profile') }}" class="btn btn-ghost">Zpět</a>
    </div>

    <div class="max-w-2xl">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-4">
                        <label for="{{ form.firstName.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Jméno</label>
                        {{ form_widget(form.firstName, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.firstName) }}
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.lastName.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Příjmení</label>
                        {{ form_widget(form.lastName, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.lastName) }}
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.phone.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Telefon</label>
                        {{ form_widget(form.phone, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.phone) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_profile') }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Uložit změny</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
