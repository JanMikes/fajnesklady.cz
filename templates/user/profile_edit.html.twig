{% extends 'user/layout.html.twig' %}

{% block title %}Upravit profil - {{ parent() }}{% endblock %}

{% block content %}
    <div class="max-w-2xl mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Upravit profil</h1>
            <a href="{{ path('app_profile') }}" class="btn btn-ghost">Zpět na profil</a>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">{{ form_label(form.firstName) }}</label>
                            {{ form_widget(form.firstName) }}
                            {{ form_errors(form.firstName) }}
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">{{ form_label(form.lastName) }}</label>
                            {{ form_widget(form.lastName) }}
                            {{ form_errors(form.lastName) }}
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">{{ form_label(form.phone) }}</label>
                            {{ form_widget(form.phone) }}
                            {{ form_errors(form.phone) }}
                        </div>
                    </div>

                    <div class="flex justify-end gap-2 mt-6">
                        <a href="{{ path('app_profile') }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Uložit změny</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
