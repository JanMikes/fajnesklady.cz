{% extends 'user/layout.html.twig' %}

{% block title %}Profile - {{ parent() }}{% endblock %}

{% block content %}
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold mb-6 text-gray-900">Your Profile</h1>

        <div class="card">
            <div class="card-body">
                <div class="flex items-center gap-4 mb-6">
                    <div class="flex-shrink-0">
                        <div class="bg-blue-600 text-white rounded-full w-24 h-24 flex items-center justify-center">
                            <span class="text-3xl font-semibold">{{ app.user.name|first|upper }}</span>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900">{{ app.user.name }}</h2>
                        <p class="text-gray-600">{{ app.user.email }}</p>
                    </div>
                </div>

                <hr class="my-6 border-t border-gray-200">

                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
                        <input type="text" value="{{ app.user.email }}" class="form-input bg-gray-50" readonly />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Name</label>
                        <input type="text" value="{{ app.user.name }}" class="form-input bg-gray-50" readonly />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Account Status</label>
                        <div class="flex gap-2">
                            {% if app.user.isVerified %}
                                <div class="badge badge-success gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    Verified
                                </div>
                            {% else %}
                                <div class="badge badge-warning gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                                    </svg>
                                    Not Verified
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Roles</label>
                        <div class="flex flex-wrap gap-2">
                            {% for role in app.user.roles %}
                                <div class="badge badge-primary">{{ role }}</div>
                            {% endfor %}
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Member Since</label>
                        <input type="text" value="{{ app.user.createdAt|date('F j, Y') }}" class="form-input bg-gray-50" readonly />
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
