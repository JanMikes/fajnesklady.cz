{% extends 'user/layout.html.twig' %}

{% block title %}Register - {{ parent() }}{% endblock %}

{% block content %}
    <div class="flex justify-center">
        <div class="card w-full max-w-md bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title text-center text-2xl font-bold mb-4">Create Account</h2>

                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.name) }}
                    {{ form_row(registrationForm.password.first) }}
                    {{ form_row(registrationForm.password.second) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                    <div class="form-control mt-2">
                        <button type="submit" class="btn btn-primary w-full">Register</button>
                    </div>
                {{ form_end(registrationForm) }}

                <div class="divider">OR</div>

                <p class="text-center">
                    Already have an account?
                    <a href="{{ path('app_login') }}" class="link link-primary">Login here</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
