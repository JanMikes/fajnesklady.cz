{% extends 'user/layout.html.twig' %}

{% block title %}Obnovení hesla{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="card w-full max-w-md">
        <div class="card-body">
            <h2 class="text-2xl font-bold text-center text-gray-900 mb-6">
                Nastavit nové heslo
            </h2>

            <p class="text-center text-gray-600 mb-6">
                Zadejte prosím své nové heslo.
            </p>

            {{ form_start(form) }}
                {{ form_row(form.newPassword.first) }}
                {{ form_row(form.newPassword.second) }}
                {{ form_errors(form.newPassword) }}

                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-primary w-full">
                        Obnovit heslo
                    </button>
                </div>
            {{ form_end(form) }}

            <div class="relative my-6">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-200"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-2 bg-white text-gray-500"></span>
                </div>
            </div>

            <div class="text-center">
                <a href="{{ path('app_login') }}" class="link text-sm">
                    Zpět na přihlášení
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
