{% extends 'user/layout.html.twig' %}

{% block title %}Registrace pronajímatele - {{ parent() }}{% endblock %}

{% block content %}
    <div class="max-w-2xl mx-auto">
        <div class="card">
            <div class="card-body">
                <h1 class="text-center text-2xl font-bold mb-2 text-gray-900">Nabídněte své prostory k pronájmu</h1>
                <p class="text-center text-gray-600 mb-6">Staňte se partnerem Fajných Skladů a pronajímejte své prostory.</p>

                {{ form_start(form, {attr: {class: 'space-y-6', 'x-data': '{
                    aresLoading: false,
                    aresError: null,
                    aresSuccess: null,
                    async loadFromAres() {
                        const ico = document.querySelector("[name=\\"landlord_registration_form[companyId]\\"]").value;
                        if (!ico || !ico.match(/^\\d{8}$/)) {
                            this.aresError = "IČO musí mít přesně 8 číslic.";
                            this.aresSuccess = null;
                            return;
                        }
                        this.aresLoading = true;
                        this.aresError = null;
                        this.aresSuccess = null;
                        try {
                            const res = await fetch("/api/ares/" + ico);
                            const data = await res.json();
                            if (data.error) {
                                this.aresError = data.error;
                                return;
                            }
                            document.querySelector("[name=\\"landlord_registration_form[companyName]\\"]").value = data.companyName || "";
                            document.querySelector("[name=\\"landlord_registration_form[companyVatId]\\"]").value = data.companyVatId || "";
                            document.querySelector("[name=\\"landlord_registration_form[billingStreet]\\"]").value = data.billingStreet || "";
                            document.querySelector("[name=\\"landlord_registration_form[billingCity]\\"]").value = data.billingCity || "";
                            document.querySelector("[name=\\"landlord_registration_form[billingPostalCode]\\"]").value = data.billingPostalCode || "";
                            this.aresSuccess = "Údaje byly úspěšně načteny z ARES.";
                        } catch (e) {
                            this.aresError = "Nepodařilo se načíst údaje z ARES.";
                        } finally {
                            this.aresLoading = false;
                        }
                    }
                }'}}) }}

                    {# Contact Information #}
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            Kontaktní údaje
                        </h2>

                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                {{ form_row(form.firstName) }}
                            </div>
                            <div>
                                {{ form_row(form.lastName) }}
                            </div>
                        </div>

                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                {{ form_row(form.email) }}
                            </div>
                            <div>
                                {{ form_row(form.phone) }}
                            </div>
                        </div>
                    </div>

                    {# Password #}
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                            </svg>
                            Přístupové údaje
                        </h2>

                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                {{ form_row(form.password.first) }}
                            </div>
                            <div>
                                {{ form_row(form.password.second) }}
                            </div>
                        </div>
                    </div>

                    {# Company Information #}
                    <div class="bg-gray-50 rounded-lg p-6" :class="{'opacity-50': aresLoading}">
                        <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                            Firemní údaje
                        </h2>

                        {# IČO with ARES lookup button #}
                        <div class="mb-4">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">{{ form.companyId.vars.label }}</label>
                            <div class="flex gap-2">
                                {{ form_widget(form.companyId, {attr: {class: 'input input-bordered flex-1'}}) }}
                                <button type="button"
                                        @click="loadFromAres()"
                                        class="btn btn-secondary"
                                        :disabled="aresLoading">
                                    <span x-show="!aresLoading">Vyhledat v ARES</span>
                                    <span x-show="aresLoading" class="loading loading-spinner loading-sm"></span>
                                </button>
                            </div>
                            {{ form_errors(form.companyId) }}
                        </div>

                        {# ARES feedback messages #}
                        <div x-show="aresError" x-cloak class="alert alert-warning flex items-center gap-2 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-5 w-5" fill="none" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            <span x-text="aresError"></span>
                        </div>

                        <div x-show="aresSuccess" x-cloak class="alert alert-success flex items-center gap-2 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-5 w-5" fill="none" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            <span x-text="aresSuccess"></span>
                        </div>

                        {# Company name and VAT ID #}
                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                {{ form_row(form.companyName) }}
                            </div>
                            <div>
                                {{ form_row(form.companyVatId) }}
                            </div>
                        </div>

                        {# Billing address #}
                        <div class="mb-4">
                            {{ form_row(form.billingStreet) }}
                        </div>

                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                {{ form_row(form.billingCity) }}
                            </div>
                            <div>
                                {{ form_row(form.billingPostalCode) }}
                            </div>
                        </div>
                    </div>

                    {# Terms and Submit #}
                    <div class="space-y-4">
                        {{ form_row(form.agreeTerms) }}

                        <button type="submit" class="btn btn-primary w-full">
                            Registrovat jako pronajímatel
                        </button>
                    </div>

                {{ form_end(form) }}

                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-200"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">NEBO</span>
                    </div>
                </div>

                <p class="text-center text-gray-700">
                    Už máte účet?
                    <a href="{{ path('app_login') }}" class="link">Přihlaste se</a>
                </p>
                <p class="text-center text-gray-500 text-sm mt-2">
                    Chcete si pronajmout sklad?
                    <a href="{{ path('app_register') }}" class="link">Registrujte se jako nájemce</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
