{% extends 'admin/layout.html.twig' %}

{% block title %}Edit User Role - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Edit User Role</h1>
        <a href="{{ path('admin_users_view', {id: user.id}) }}" class="btn btn-ghost">Cancel</a>
    </div>

    <div class="max-w-2xl">
        <div class="card mb-6">
            <div class="card-body">
                <div class="flex items-center gap-4">
                    <div class="flex-shrink-0">
                        <div class="bg-gray-600 text-white rounded-full w-16 h-16 flex items-center justify-center">
                            <span class="text-xl font-semibold">{{ user.name|first|upper }}</span>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-gray-900">{{ user.name }}</h2>
                        <p class="text-gray-600">{{ user.email }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-6">
                        <label class="block text-sm font-semibold text-gray-700 mb-3">{{ form_label(form.role) }}</label>
                        <div class="space-y-2">
                            {% for choice in form.role %}
                                <div class="flex items-center">
                                    <label class="flex items-center cursor-pointer gap-3">
                                        {{ form_widget(choice, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300'}}) }}
                                        <span class="text-sm text-gray-700">{{ choice.vars.label }}</span>
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.role) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('admin_users_view', {id: user.id}) }}" class="btn btn-ghost">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
