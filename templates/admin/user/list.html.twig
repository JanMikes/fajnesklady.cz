{% extends 'admin/layout.html.twig' %}

{% block title %}Users - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Users</h1>
    </div>

    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>
                                    <div class="flex items-center gap-3">
                                        <div class="avatar placeholder">
                                            <div class="bg-neutral text-neutral-content rounded-full w-10">
                                                <span class="text-xs">{{ user.name|first|upper }}</span>
                                            </div>
                                        </div>
                                        <div class="font-semibold">{{ user.name }}</div>
                                    </div>
                                </td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        {% if role != 'ROLE_USER' %}
                                            <div class="badge badge-primary">{{ role }}</div>
                                        {% else %}
                                            <div class="badge">{{ role }}</div>
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    {% if user.isVerified %}
                                        <div class="badge badge-success gap-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-3 h-3 stroke-current">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            Verified
                                        </div>
                                    {% else %}
                                        <div class="badge badge-warning gap-2">
                                            Unverified
                                        </div>
                                    {% endif %}
                                </td>
                                <td>{{ user.createdAt|date('Y-m-d H:i') }}</td>
                                <td>
                                    <a href="{{ path('admin_users_view', {id: user.id}) }}" class="btn btn-ghost btn-sm">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                        View
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No users found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {% if totalPages > 1 %}
                <div class="flex justify-between items-center mt-4 pt-4 border-t">
                    <div class="text-sm">
                        Showing page {{ currentPage }} of {{ totalPages }} ({{ totalUsers }} total users)
                    </div>
                    <div class="join">
                        {% if currentPage > 1 %}
                            <a href="{{ path('admin_users_list', {page: currentPage - 1}) }}" class="join-item btn btn-sm">«</a>
                        {% else %}
                            <button class="join-item btn btn-sm btn-disabled">«</button>
                        {% endif %}

                        {% set startPage = max(1, currentPage - 2) %}
                        {% set endPage = min(totalPages, currentPage + 2) %}

                        {% if startPage > 1 %}
                            <a href="{{ path('admin_users_list', {page: 1}) }}" class="join-item btn btn-sm">1</a>
                            {% if startPage > 2 %}
                                <button class="join-item btn btn-sm btn-disabled">...</button>
                            {% endif %}
                        {% endif %}

                        {% for page in startPage..endPage %}
                            {% if page == currentPage %}
                                <button class="join-item btn btn-sm btn-active">{{ page }}</button>
                            {% else %}
                                <a href="{{ path('admin_users_list', {page: page}) }}" class="join-item btn btn-sm">{{ page }}</a>
                            {% endif %}
                        {% endfor %}

                        {% if endPage < totalPages %}
                            {% if endPage < totalPages - 1 %}
                                <button class="join-item btn btn-sm btn-disabled">...</button>
                            {% endif %}
                            <a href="{{ path('admin_users_list', {page: totalPages}) }}" class="join-item btn btn-sm">{{ totalPages }}</a>
                        {% endif %}

                        {% if currentPage < totalPages %}
                            <a href="{{ path('admin_users_list', {page: currentPage + 1}) }}" class="join-item btn btn-sm">»</a>
                        {% else %}
                            <button class="join-item btn btn-sm btn-disabled">»</button>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
