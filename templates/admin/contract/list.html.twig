{% extends 'portal/layout.html.twig' %}

{% block title %}Všechny smlouvy - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Všechny smlouvy (Admin)</h1>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>ID smlouvy</th>
                        <th>Nájemce</th>
                        <th>Sklad</th>
                        <th>Pobočka</th>
                        <th>Období</th>
                        <th>Stav</th>
                        <th>Vytvořeno</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contract in contracts %}
                        <tr>
                            <td class="font-mono text-sm">{{ contract.id|slice(0, 8) }}...</td>
                            <td>
                                <a href="{{ path('portal_users_view', {id: contract.user.id}) }}" class="link">
                                    {{ contract.user.fullName }}
                                </a>
                                <div class="text-xs text-gray-500">{{ contract.user.email }}</div>
                            </td>
                            <td class="text-gray-900">{{ contract.storage.number }}</td>
                            <td class="text-gray-500">{{ contract.storage.place.name }}</td>
                            <td class="text-sm">
                                {{ contract.startDate|date('d.m.Y') }}
                                {% if contract.endDate %}
                                    - {{ contract.endDate|date('d.m.Y') }}
                                {% else %}
                                    <span class="text-gray-500">(na dobu neurčitou)</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if contract.terminatedAt %}
                                    <span class="badge badge-error">Ukončeno</span>
                                {% elseif contract.signedAt %}
                                    <span class="badge badge-success">Aktivní</span>
                                {% else %}
                                    <span class="badge badge-warning">Čeká na podpis</span>
                                {% endif %}
                            </td>
                            <td class="text-gray-500 text-sm">{{ contract.createdAt|date('d.m.Y H:i') }}</td>
                            <td>
                                <a href="{{ path('portal_user_contract_detail', {id: contract.id}) }}" class="link text-sm font-medium">
                                    Zobrazit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-gray-500 py-8">Žádné smlouvy nenalezeny</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
            {% include 'components/pagination.html.twig' with {
                currentPage: currentPage,
                totalPages: totalPages,
                route: 'admin_contracts_list'
            } %}
        {% endif %}
    </div>
{% endblock %}
