{% extends 'portal/layout.html.twig' %}

{% block title %}Všechny objednávky - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Všechny objednávky (Admin)</h1>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>ID objednávky</th>
                        <th>Zákazník</th>
                        <th>Sklad</th>
                        <th>Pobočka</th>
                        <th>Období</th>
                        <th>Cena</th>
                        <th>Stav</th>
                        <th>Vytvořeno</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td class="font-mono text-sm">{{ order.id|slice(0, 8) }}...</td>
                            <td>
                                <a href="{{ path('portal_users_view', {id: order.user.id}) }}" class="text-blue-600 hover:text-blue-800">
                                    {{ order.user.fullName }}
                                </a>
                                <div class="text-xs text-gray-500">{{ order.user.email }}</div>
                            </td>
                            <td class="text-gray-900">{{ order.storage.number }}</td>
                            <td class="text-gray-500">{{ order.storage.storageType.place.name }}</td>
                            <td class="text-sm">
                                {{ order.startDate|date('d.m.Y') }}
                                {% if order.endDate %}
                                    - {{ order.endDate|date('d.m.Y') }}
                                {% else %}
                                    <span class="text-gray-500">(na dobu neurčitou)</span>
                                {% endif %}
                            </td>
                            <td class="font-medium">{{ (order.totalPrice / 100)|number_format(0, ',', ' ') }} Kč</td>
                            <td>
                                {% set statusClass = {
                                    'created': 'badge-ghost',
                                    'reserved': 'badge-info',
                                    'awaiting_payment': 'badge-warning',
                                    'paid': 'badge-success',
                                    'completed': 'badge-success',
                                    'cancelled': 'badge-error',
                                    'expired': 'badge-error'
                                } %}
                                {% set statusLabel = {
                                    'created': 'Vytvořeno',
                                    'reserved': 'Rezervováno',
                                    'awaiting_payment': 'Čeká na platbu',
                                    'paid': 'Zaplaceno',
                                    'completed': 'Dokončeno',
                                    'cancelled': 'Zrušeno',
                                    'expired': 'Expirováno'
                                } %}
                                <span class="badge {{ statusClass[order.status.value] ?? 'badge-ghost' }}">
                                    {{ statusLabel[order.status.value] ?? order.status.value }}
                                </span>
                            </td>
                            <td class="text-gray-500 text-sm">{{ order.createdAt|date('d.m.Y H:i') }}</td>
                            <td>
                                <a href="{{ path('portal_landlord_order_detail', {id: order.id}) }}" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    Zobrazit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center text-gray-500 py-8">Žádné objednávky nenalezeny</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
            {% include 'components/pagination.html.twig' with {
                currentPage: currentPage,
                totalPages: totalPages,
                route: 'admin_orders_list'
            } %}
        {% endif %}
    </div>
{% endblock %}
