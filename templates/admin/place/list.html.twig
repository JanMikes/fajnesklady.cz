{% extends 'portal/layout.html.twig' %}

{% block title %}All Places - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">All Places (Admin View)</h1>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Owner</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for place in places %}
                        <tr>
                            <td class="font-medium text-gray-900">{{ place.name }}</td>
                            <td class="text-gray-500">
                                <a href="{{ path('portal_users_view', {id: place.owner.id}) }}" class="text-blue-600 hover:text-blue-800">
                                    {{ place.owner.fullName }}
                                </a>
                            </td>
                            <td class="text-gray-500">{{ place.address }}, {{ place.city }}</td>
                            <td>
                                {% if place.isActive %}
                                    <span class="badge badge-success">Active</span>
                                {% else %}
                                    <span class="badge badge-ghost">Inactive</span>
                                {% endif %}
                            </td>
                            <td class="text-gray-500 text-sm">{{ place.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('portal_places_edit', {id: place.id}) }}" class="inline-flex items-center text-blue-600 hover:text-blue-800 text-sm font-medium">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        Edit
                                    </a>
                                    <a href="{{ path('portal_storage_canvas', {placeId: place.id}) }}" class="inline-flex items-center text-green-600 hover:text-green-800 text-sm font-medium">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
                                        </svg>
                                        Editor
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-gray-500 py-8">No places found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
            {% include 'components/pagination.html.twig' with {
                currentPage: currentPage,
                totalPages: totalPages,
                route: 'admin_places_list'
            } %}
        {% endif %}
    </div>
{% endblock %}
