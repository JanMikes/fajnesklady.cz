{% extends 'admin/layout.html.twig' %}

{% block title %}Upravit misto - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Upravit misto</h1>
        <a href="{{ path('admin_places_list') }}" class="btn btn-ghost">Zpet na seznam</a>
    </div>

    <div class="max-w-2xl">
        <div class="card mb-6">
            <div class="card-body">
                <div class="flex items-center gap-4">
                    <div class="flex-shrink-0">
                        <div class="bg-blue-600 text-white rounded-full w-16 h-16 flex items-center justify-center">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-gray-900">{{ place.name }}</h2>
                        <p class="text-gray-600">{{ place.address }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-4">
                        <label for="{{ form.name.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Nazev</label>
                        {{ form_widget(form.name, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.address.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Adresa</label>
                        {{ form_widget(form.address, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.address) }}
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.description.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Popis (nepovinne)</label>
                        {{ form_widget(form.description, {'attr': {'class': 'textarea textarea-bordered w-full', 'rows': 4}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('admin_places_list') }}" class="btn btn-ghost">Zrusit</a>
                        <button type="submit" class="btn btn-primary">Ulozit zmeny</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
