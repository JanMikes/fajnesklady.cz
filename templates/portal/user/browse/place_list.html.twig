{% extends 'portal/layout.html.twig' %}

{% block title %}Pobočky - Portal{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>
{% endblock %}

{% block content %}
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Pobočky</h1>
        <p class="text-gray-600 mt-1">Najděte nejbližší pobočku a pronajměte si sklad</p>
    </div>

    {# Map #}
    <div class="mb-8">
        {% include 'partials/places_map.html.twig' %}
    </div>

    {# Places Table #}
    {% if placesWithStorageTypes|length > 0 %}
        <div class="mb-4">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Přehled poboček a cen</h2>
        </div>
        {% include 'partials/places_table.html.twig' with {placeDetailRouteName: 'portal_browse_place_detail'} %}
    {% endif %}
{% endblock %}
