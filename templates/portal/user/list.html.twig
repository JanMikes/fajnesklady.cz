{% extends 'portal/layout.html.twig' %}

{% block title %}Uživatelé - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Uživatelé</h1>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Jméno</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Stav</th>
                        <th>Vytvořeno</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                <div class="flex items-center space-x-3">
                                    <div class="flex-shrink-0 h-10 w-10 rounded-full bg-gray-600 text-white flex items-center justify-center font-medium text-sm">
                                        {{ user.fullName|first|upper }}
                                    </div>
                                    <div class="font-medium text-gray-900">{{ user.fullName }}</div>
                                </div>
                            </td>
                            <td class="text-gray-500">{{ user.email }}</td>
                            <td>
                                <div class="flex flex-wrap gap-1">
                                    {% for role in user.roles %}
                                        {% if role != 'ROLE_USER' %}
                                            <span class="badge badge-primary">{{ role|role_label }}</span>
                                        {% else %}
                                            <span class="badge badge-secondary">{{ role|role_label }}</span>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </td>
                            <td>
                                {% if user.isVerified %}
                                    <span class="badge badge-success">
                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                        </svg>
                                        Ověřený
                                    </span>
                                {% else %}
                                    <span class="badge badge-warning">Neověřený</span>
                                {% endif %}
                            </td>
                            <td class="text-gray-500 text-sm">{{ user.createdAt|date('d.m.Y H:i') }}</td>
                            <td>
                                <div class="flex gap-2">
                                    <a href="{{ path('portal_users_view', {id: user.id}) }}" class="inline-flex items-center link text-sm font-medium">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                        Zobrazit
                                    </a>
                                    {% if not user.isVerified %}
                                        <form action="{{ path('portal_users_verify', {id: user.id}) }}" method="post" class="inline">
                                            <button type="submit" class="btn btn-xs btn-success">Ověřit</button>
                                        </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-gray-500 py-8">Žádní uživatelé nenalezeni</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
            {% include 'components/pagination.html.twig' with {
                currentPage: currentPage,
                totalPages: totalPages,
                totalItems: totalUsers,
                itemLabel: 'uživatelů',
                route: 'portal_users_list'
            } %}
        {% endif %}
    </div>
{% endblock %}
