{% extends 'portal/layout.html.twig' %}

{% block title %}Upravit uživatele - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Upravit uživatele</h1>
        <a href="{{ path('portal_users_view', {id: user.id}) }}" class="btn btn-ghost">Zrušit</a>
    </div>

    <div class="max-w-2xl">
        <div class="card mb-6">
            <div class="card-body">
                <div class="flex items-center gap-4">
                    <div class="flex-shrink-0">
                        <div class="bg-gray-600 text-white rounded-full w-16 h-16 flex items-center justify-center">
                            <span class="text-xl font-semibold">{{ user.fullName|first|upper }}</span>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-gray-900">{{ user.fullName }}</h2>
                        <p class="text-gray-600">{{ user.email }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <h3 class="text-lg font-semibold mb-4">Osobní údaje</h3>
                    <div class="grid md:grid-cols-2 gap-4 mb-6">
                        <div>
                            {{ form_label(form.firstName) }}
                            {{ form_widget(form.firstName) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div>
                            {{ form_label(form.lastName) }}
                            {{ form_widget(form.lastName) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                        <div class="md:col-span-2">
                            {{ form_label(form.phone) }}
                            {{ form_widget(form.phone) }}
                            {{ form_errors(form.phone) }}
                        </div>
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <h3 class="text-lg font-semibold mb-4">Fakturační údaje</h3>
                    <div class="grid md:grid-cols-2 gap-4 mb-6">
                        <div>
                            {{ form_label(form.companyName) }}
                            {{ form_widget(form.companyName) }}
                            {{ form_errors(form.companyName) }}
                        </div>
                        <div>
                            {{ form_label(form.companyId) }}
                            {{ form_widget(form.companyId) }}
                            {{ form_errors(form.companyId) }}
                        </div>
                        <div class="md:col-span-2">
                            {{ form_label(form.companyVatId) }}
                            {{ form_widget(form.companyVatId) }}
                            {{ form_errors(form.companyVatId) }}
                        </div>
                        <div class="md:col-span-2">
                            {{ form_label(form.billingStreet) }}
                            {{ form_widget(form.billingStreet) }}
                            {{ form_errors(form.billingStreet) }}
                        </div>
                        <div>
                            {{ form_label(form.billingCity) }}
                            {{ form_widget(form.billingCity) }}
                            {{ form_errors(form.billingCity) }}
                        </div>
                        <div>
                            {{ form_label(form.billingPostalCode) }}
                            {{ form_widget(form.billingPostalCode) }}
                            {{ form_errors(form.billingPostalCode) }}
                        </div>
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <h3 class="text-lg font-semibold mb-4">Role</h3>
                    <div class="mb-6">
                        <div class="space-y-2">
                            {% for choice in form.role %}
                                <div class="flex items-center">
                                    <label class="flex items-center cursor-pointer gap-3">
                                        {{ form_widget(choice, {'attr': {'class': 'h-4 w-4 text-accent focus:ring-accent border-gray-300'}}) }}
                                        <span class="text-sm text-gray-700">{{ choice.vars.label }}</span>
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                        {{ form_errors(form.role) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_users_view', {id: user.id}) }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Uložit změny</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
