{% extends 'portal/layout.html.twig' %}

{% block title %}View User - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">User Details</h1>
        <div class="flex gap-2">
            <a href="{{ path('portal_users_edit', {id: user.id}) }}" class="btn btn-primary">Edit Role</a>
            <a href="{{ path('portal_users_list') }}" class="btn btn-ghost">Back to List</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="flex items-center gap-6 mb-6">
                <div class="flex-shrink-0">
                    <div class="bg-blue-600 text-white rounded-full w-24 h-24 flex items-center justify-center">
                        <span class="text-3xl font-semibold">{{ user.name|first|upper }}</span>
                    </div>
                </div>
                <div>
                    <h2 class="text-2xl font-bold text-gray-900">{{ user.name }}</h2>
                    <p class="text-gray-600">{{ user.email }}</p>
                </div>
            </div>

            <hr class="my-6 border-t border-gray-200">

            <div class="grid md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">User ID</label>
                    <div class="text-sm font-mono bg-gray-50 p-2 rounded border border-gray-200">{{ user.id }}</div>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Email</label>
                    <div class="text-sm text-gray-900">{{ user.email }}</div>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Name</label>
                    <div class="text-sm text-gray-900">{{ user.name }}</div>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Verification Status</label>
                    {% if user.isVerified %}
                        <div class="badge badge-success gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Verified
                        </div>
                    {% else %}
                        <div class="badge badge-warning gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-4 h-4 stroke-current">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                            Not Verified
                        </div>
                    {% endif %}
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Roles</label>
                    <div class="flex flex-wrap gap-2">
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' %}
                                <div class="badge badge-primary">{{ role }}</div>
                            {% else %}
                                <div class="badge badge-secondary">{{ role }}</div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Member Since</label>
                    <div class="text-sm text-gray-900">{{ user.createdAt|date('F j, Y \\a\\t g:i A') }}</div>
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Last Updated</label>
                    <div class="text-sm text-gray-900">{{ user.updatedAt|date('F j, Y \\a\\t g:i A') }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
