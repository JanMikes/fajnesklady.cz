{% extends 'portal/layout.html.twig' %}

{% block title %}Typy skladu - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Typy skladu</h1>
        <a href="{{ path('portal_storage_types_create') }}" class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Pridat typ skladu
        </a>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Nazev</th>
                        <th>Rozmery (m)</th>
                        <th>Objem (m3)</th>
                        <th>Cena/tyden</th>
                        <th>Cena/mesic</th>
                        {% if is_granted('ROLE_ADMIN') %}
                            <th>Vlastnik</th>
                        {% endif %}
                        <th>Vytvoreno</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for storageType in storageTypes %}
                        <tr>
                            <td class="font-medium text-gray-900">{{ storageType.name }}</td>
                            <td class="text-gray-500">{{ storageType.width }} x {{ storageType.height }} x {{ storageType.length }}</td>
                            <td class="text-gray-500">{{ storageType.volume|number_format(2, ',', ' ') }}</td>
                            <td class="text-gray-900 font-medium">{{ storageType.pricePerWeekInCzk|number_format(0, ',', ' ') }} Kc</td>
                            <td class="text-gray-900 font-medium">{{ storageType.pricePerMonthInCzk|number_format(0, ',', ' ') }} Kc</td>
                            {% if is_granted('ROLE_ADMIN') %}
                                <td class="text-gray-500">{{ storageType.owner.fullName }}</td>
                            {% endif %}
                            <td class="text-gray-500 text-sm">{{ storageType.createdAt|date('Y-m-d H:i') }}</td>
                            <td>
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('portal_storage_types_edit', {id: storageType.id}) }}" class="inline-flex items-center text-blue-600 hover:text-blue-800 text-sm font-medium">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        Upravit
                                    </a>
                                    <form action="{{ path('portal_storage_types_delete', {id: storageType.id}) }}" method="post" class="inline" onsubmit="return confirm('Opravdu chcete smazat tento typ skladu?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_storage_type_' ~ storageType.id) }}">
                                        <button type="submit" class="inline-flex items-center text-red-600 hover:text-red-800 text-sm font-medium">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                            Smazat
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="{{ is_granted('ROLE_ADMIN') ? 8 : 7 }}" class="text-center text-gray-500 py-8">Zadne typy skladu nebyly nalezeny</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
            <div class="flex justify-between items-center mt-4 px-6 py-4 border-t border-gray-200">
                <div class="text-sm text-gray-500">
                    Strana {{ currentPage }} z {{ totalPages }} (celkem {{ totalStorageTypes }} typu)
                </div>
                <div class="flex space-x-1">
                    {% if currentPage > 1 %}
                        <a href="{{ path('portal_storage_types_list', {page: currentPage - 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Predchozi
                        </a>
                    {% else %}
                        <span class="px-3 py-1 rounded-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                            Predchozi
                        </span>
                    {% endif %}

                    {% set startPage = max(1, currentPage - 2) %}
                    {% set endPage = min(totalPages, currentPage + 2) %}

                    {% if startPage > 1 %}
                        <a href="{{ path('portal_storage_types_list', {page: 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">1</a>
                        {% if startPage > 2 %}
                            <span class="px-3 py-1 text-sm text-gray-400">...</span>
                        {% endif %}
                    {% endif %}

                    {% for page in startPage..endPage %}
                        {% if page == currentPage %}
                            <span class="px-3 py-1 rounded-md border border-blue-500 bg-blue-50 text-sm font-medium text-blue-700">{{ page }}</span>
                        {% else %}
                            <a href="{{ path('portal_storage_types_list', {page: page}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ page }}</a>
                        {% endif %}
                    {% endfor %}

                    {% if endPage < totalPages %}
                        {% if endPage < totalPages - 1 %}
                            <span class="px-3 py-1 text-sm text-gray-400">...</span>
                        {% endif %}
                        <a href="{{ path('portal_storage_types_list', {page: totalPages}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ totalPages }}</a>
                    {% endif %}

                    {% if currentPage < totalPages %}
                        <a href="{{ path('portal_storage_types_list', {page: currentPage + 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Dalsi
                        </a>
                    {% else %}
                        <span class="px-3 py-1 rounded-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                            Dalsi
                        </span>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
