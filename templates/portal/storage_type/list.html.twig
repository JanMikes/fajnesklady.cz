{% extends 'portal/layout.html.twig' %}

{% block title %}Typy skladů - {{ place.name }}{% endblock %}

{% block breadcrumb %}
    {% include 'components/breadcrumb.html.twig' with {breadcrumb_items: [
        {label: 'Místa', url: path('portal_places_list')},
        {label: place.name, url: path('portal_places_detail', {id: place.id})},
        {label: 'Typy skladů'},
    ]} %}
{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Typy skladů</h1>
            <p class="text-gray-500 mt-1">{{ place.name }} ({{ place.city }})</p>
        </div>
        <a href="{{ path('portal_storage_types_create', {placeId: place.id}) }}" class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Přidat typ skladu
        </a>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Název</th>
                        <th>Vnitřní rozměry (m)</th>
                        <th>Plocha (m&sup2;)</th>
                        <th>Objem (m&sup3;)</th>
                        <th>Cena/týden</th>
                        <th>Cena/měsíc</th>
                        <th>Vytvořeno</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for storageType in storageTypes %}
                        <tr>
                            <td class="font-medium text-gray-900">
                                {{ storageType.name }}
                                {% if storageType.hasPhotos %}
                                    <span class="ml-1 text-accent" title="Obsahuje fotografie">
                                        <svg class="w-4 h-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-gray-500">{{ storageType.innerDimensionsInMeters }}</td>
                            <td class="text-gray-500">{{ storageType.floorAreaInSquareMeters|number_format(2, ',', ' ') }}</td>
                            <td class="text-gray-500">{{ storageType.volumeInCubicMeters|number_format(2, ',', ' ') }}</td>
                            <td class="text-gray-900 font-medium">{{ storageType.defaultPricePerWeekInCzk|number_format(0, ',', ' ') }} Kč</td>
                            <td class="text-gray-900 font-medium">{{ storageType.defaultPricePerMonthInCzk|number_format(0, ',', ' ') }} Kč</td>
                            <td class="text-gray-500 text-sm">{{ storageType.createdAt|date('d.m.Y H:i') }}</td>
                            <td>
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('portal_storage_types_edit', {placeId: place.id, id: storageType.id}) }}" class="inline-flex items-center link text-sm font-medium">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        Upravit
                                    </a>
                                    <form action="{{ path('portal_storage_types_delete', {placeId: place.id, id: storageType.id}) }}" method="post" class="inline" onsubmit="return confirm('Opravdu chcete smazat tento typ skladu?');">
                                        <button type="submit" class="inline-flex items-center text-red-600 hover:text-red-800 text-sm font-medium">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                            Smazat
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-gray-500 py-8">Žádné typy skladů nebyly nalezeny</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
            <div class="flex justify-between items-center mt-4 px-6 py-4 border-t border-gray-200">
                <div class="text-sm text-gray-500">
                    Strana {{ currentPage }} z {{ totalPages }} (celkem {{ totalStorageTypes }} typů)
                </div>
                <div class="flex space-x-1">
                    {% if currentPage > 1 %}
                        <a href="{{ path('portal_storage_types_list', {placeId: place.id, page: currentPage - 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Předchozí
                        </a>
                    {% else %}
                        <span class="px-3 py-1 rounded-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                            Předchozí
                        </span>
                    {% endif %}

                    {% set startPage = max(1, currentPage - 2) %}
                    {% set endPage = min(totalPages, currentPage + 2) %}

                    {% if startPage > 1 %}
                        <a href="{{ path('portal_storage_types_list', {placeId: place.id, page: 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">1</a>
                        {% if startPage > 2 %}
                            <span class="px-3 py-1 text-sm text-gray-400">...</span>
                        {% endif %}
                    {% endif %}

                    {% for page in startPage..endPage %}
                        {% if page == currentPage %}
                            <span class="px-3 py-1 rounded-md border border-accent bg-accent/10 text-sm font-medium text-accent">{{ page }}</span>
                        {% else %}
                            <a href="{{ path('portal_storage_types_list', {placeId: place.id, page: page}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ page }}</a>
                        {% endif %}
                    {% endfor %}

                    {% if endPage < totalPages %}
                        {% if endPage < totalPages - 1 %}
                            <span class="px-3 py-1 text-sm text-gray-400">...</span>
                        {% endif %}
                        <a href="{{ path('portal_storage_types_list', {placeId: place.id, page: totalPages}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ totalPages }}</a>
                    {% endif %}

                    {% if currentPage < totalPages %}
                        <a href="{{ path('portal_storage_types_list', {placeId: place.id, page: currentPage + 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Další
                        </a>
                    {% else %}
                        <span class="px-3 py-1 rounded-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                            Další
                        </span>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
