{% extends 'portal/layout.html.twig' %}

{% block title %}Upravit typ skladu - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Upravit typ skladu</h1>
        <a href="{{ path('portal_storage_types_list') }}" class="btn btn-ghost">Zpet na seznam</a>
    </div>

    <div class="max-w-2xl">
        <div class="card mb-6">
            <div class="card-body">
                <div class="flex items-center gap-4">
                    <div class="flex-shrink-0">
                        <div class="bg-blue-600 text-white rounded-full w-16 h-16 flex items-center justify-center">
                            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-gray-900">{{ storageType.name }}</h2>
                        <p class="text-gray-600">{{ storageType.width }} x {{ storageType.height }} x {{ storageType.length }} m ({{ storageType.volume|number_format(2, ',', ' ') }} m3)</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-4">
                        <label for="{{ form.name.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Nazev</label>
                        {{ form_widget(form.name, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Rozmery (v metrech)</label>
                        <div class="grid grid-cols-3 gap-4">
                            <div>
                                <label for="{{ form.width.vars.id }}" class="block text-xs text-gray-500 mb-1">Sirka</label>
                                {{ form_widget(form.width, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0.00'}}) }}
                                {{ form_errors(form.width) }}
                            </div>
                            <div>
                                <label for="{{ form.height.vars.id }}" class="block text-xs text-gray-500 mb-1">Vyska</label>
                                {{ form_widget(form.height, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0.00'}}) }}
                                {{ form_errors(form.height) }}
                            </div>
                            <div>
                                <label for="{{ form.length.vars.id }}" class="block text-xs text-gray-500 mb-1">Delka</label>
                                {{ form_widget(form.length, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0.00'}}) }}
                                {{ form_errors(form.length) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Ceny (v CZK)</label>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label for="{{ form.pricePerWeek.vars.id }}" class="block text-xs text-gray-500 mb-1">Cena za tyden</label>
                                {{ form_widget(form.pricePerWeek, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0'}}) }}
                                {{ form_errors(form.pricePerWeek) }}
                            </div>
                            <div>
                                <label for="{{ form.pricePerMonth.vars.id }}" class="block text-xs text-gray-500 mb-1">Cena za mesic</label>
                                {{ form_widget(form.pricePerMonth, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0'}}) }}
                                {{ form_errors(form.pricePerMonth) }}
                            </div>
                        </div>
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_storage_types_list') }}" class="btn btn-ghost">Zrusit</a>
                        <button type="submit" class="btn btn-primary">Ulozit zmeny</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
