{% extends 'portal/layout.html.twig' %}

{% block title %}Přidat typ skladu - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Přidat typ skladu</h1>
        <a href="{{ path('portal_storage_types_list') }}" class="btn btn-ghost">Zpět na seznam</a>
    </div>

    <div class="max-w-2xl">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-4">
                        <label for="{{ form.name.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Název</label>
                        {{ form_widget(form.name, {'attr': {'class': 'input input-bordered w-full'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Rozměry (v metrech)</label>
                        <div class="grid grid-cols-3 gap-4">
                            <div>
                                <label for="{{ form.width.vars.id }}" class="block text-xs text-gray-500 mb-1">Šířka</label>
                                {{ form_widget(form.width, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0.00'}}) }}
                                {{ form_errors(form.width) }}
                            </div>
                            <div>
                                <label for="{{ form.height.vars.id }}" class="block text-xs text-gray-500 mb-1">Výška</label>
                                {{ form_widget(form.height, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0.00'}}) }}
                                {{ form_errors(form.height) }}
                            </div>
                            <div>
                                <label for="{{ form.length.vars.id }}" class="block text-xs text-gray-500 mb-1">Délka</label>
                                {{ form_widget(form.length, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0.00'}}) }}
                                {{ form_errors(form.length) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Ceny (v CZK)</label>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label for="{{ form.pricePerWeek.vars.id }}" class="block text-xs text-gray-500 mb-1">Cena za týden</label>
                                {{ form_widget(form.pricePerWeek, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0'}}) }}
                                {{ form_errors(form.pricePerWeek) }}
                            </div>
                            <div>
                                <label for="{{ form.pricePerMonth.vars.id }}" class="block text-xs text-gray-500 mb-1">Cena za měsíc</label>
                                {{ form_widget(form.pricePerMonth, {'attr': {'class': 'input input-bordered w-full', 'placeholder': '0'}}) }}
                                {{ form_errors(form.pricePerMonth) }}
                            </div>
                        </div>
                    </div>

                    {% if form.ownerId is defined %}
                        <div class="mb-4">
                            <label for="{{ form.ownerId.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Vlastník</label>
                            {{ form_widget(form.ownerId, {'attr': {'class': 'select select-bordered w-full'}}) }}
                            {{ form_errors(form.ownerId) }}
                        </div>
                    {% endif %}

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_storage_types_list') }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Vytvořit typ skladu</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
