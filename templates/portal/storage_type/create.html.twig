{% extends 'portal/layout.html.twig' %}

{% block title %}Přidat typ skladu - {{ place.name }}{% endblock %}

{% block breadcrumb %}
    {% include 'components/breadcrumb.html.twig' with {breadcrumb_items: [
        {label: 'Místa', url: path('portal_places_list')},
        {label: place.name, url: path('portal_places_detail', {id: place.id})},
        {label: 'Typy skladů', url: path('portal_storage_types_list', {placeId: place.id})},
        {label: 'Přidat'},
    ]} %}
{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Přidat typ skladu</h1>

    <div class="max-w-2xl">
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="mb-4">
                        <label for="{{ form.name.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Název</label>
                        {{ form_widget(form.name, {}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    {# Inner dimensions (required) #}
                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Vnitřní rozměry (cm)</label>
                        <div class="grid grid-cols-3 gap-4">
                            <div>
                                <label for="{{ form.innerWidth.vars.id }}" class="block text-xs text-gray-500 mb-1">Šířka</label>
                                {{ form_widget(form.innerWidth, {'attr': {'placeholder':'200'}}) }}
                                {{ form_errors(form.innerWidth) }}
                            </div>
                            <div>
                                <label for="{{ form.innerHeight.vars.id }}" class="block text-xs text-gray-500 mb-1">Výška</label>
                                {{ form_widget(form.innerHeight, {'attr': {'placeholder':'250'}}) }}
                                {{ form_errors(form.innerHeight) }}
                            </div>
                            <div>
                                <label for="{{ form.innerLength.vars.id }}" class="block text-xs text-gray-500 mb-1">Délka</label>
                                {{ form_widget(form.innerLength, {'attr': {'placeholder':'300'}}) }}
                                {{ form_errors(form.innerLength) }}
                            </div>
                        </div>
                    </div>

                    {# Outer dimensions (optional) #}
                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Vnější rozměry (cm) - volitelné</label>
                        <div class="grid grid-cols-3 gap-4">
                            <div>
                                <label for="{{ form.outerWidth.vars.id }}" class="block text-xs text-gray-500 mb-1">Šířka</label>
                                {{ form_widget(form.outerWidth, {'attr': {'placeholder':'210'}}) }}
                                {{ form_errors(form.outerWidth) }}
                            </div>
                            <div>
                                <label for="{{ form.outerHeight.vars.id }}" class="block text-xs text-gray-500 mb-1">Výška</label>
                                {{ form_widget(form.outerHeight, {'attr': {'placeholder':'260'}}) }}
                                {{ form_errors(form.outerHeight) }}
                            </div>
                            <div>
                                <label for="{{ form.outerLength.vars.id }}" class="block text-xs text-gray-500 mb-1">Délka</label>
                                {{ form_widget(form.outerLength, {'attr': {'placeholder':'310'}}) }}
                                {{ form_errors(form.outerLength) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Ceny (v CZK)</label>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label for="{{ form.defaultPricePerWeek.vars.id }}" class="block text-xs text-gray-500 mb-1">Cena za týden</label>
                                {{ form_widget(form.defaultPricePerWeek, {'attr': {'placeholder':'0'}}) }}
                                {{ form_errors(form.defaultPricePerWeek) }}
                            </div>
                            <div>
                                <label for="{{ form.defaultPricePerMonth.vars.id }}" class="block text-xs text-gray-500 mb-1">Cena za měsíc</label>
                                {{ form_widget(form.defaultPricePerMonth, {'attr': {'placeholder':'0'}}) }}
                                {{ form_errors(form.defaultPricePerMonth) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.description.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Popis</label>
                        {{ form_widget(form.description, {'attr': {'rows': 3}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="mb-4">
                        <label class="flex items-center gap-3 cursor-pointer">
                            {{ form_widget(form.uniformStorages, {}) }}
                            <span class="text-sm font-semibold text-gray-700">Všechna úložiště budou stejná</span>
                        </label>
                        <p class="text-xs text-gray-500 mt-1 ml-8">Nebude se zobrazovat mapa pro výběr konkrétního místa a budou mít jednotnou cenu</p>
                        {{ form_errors(form.uniformStorages) }}
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.photos.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Fotografie</label>
                        {{ form_widget(form.photos, {}) }}
                        <p class="text-xs text-gray-500 mt-1">Nahrajte fotografie skladu (JPEG, PNG, WebP, max 5 MB každá)</p>
                        {{ form_errors(form.photos) }}
                    </div>

                    {% if form.placeId is defined %}
                        <div class="mb-4">
                            <label for="{{ form.placeId.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Místo</label>
                            {{ form_widget(form.placeId, {}) }}
                            {{ form_errors(form.placeId) }}
                        </div>
                    {% endif %}

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_storage_types_list', {placeId: place.id}) }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Vytvořit typ skladu</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
