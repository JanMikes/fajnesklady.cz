{% extends 'portal/layout.html.twig' %}

{% block title %}Prehled - Portal{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Prehled</h1>

    <div class="grid md:grid-cols-2 gap-6">
        <div class="card">
            <div class="card-body">
                <div class="flex items-center mb-4">
                    <svg class="h-6 w-6 text-gray-700 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <h2 class="text-xl font-semibold text-gray-900">Mista</h2>
                </div>
                <p class="text-gray-600 mb-4">Spravujte vase mista pro skladovani</p>
                <div class="flex justify-end">
                    <a href="{{ path('portal_places_list') }}" class="btn btn-primary">Zobrazit mista</a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="flex items-center mb-4">
                    <svg class="h-6 w-6 text-gray-700 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                    <h2 class="text-xl font-semibold text-gray-900">Typy skladu</h2>
                </div>
                <p class="text-gray-600 mb-4">Spravujte typy a velikosti vasich skladu</p>
                <div class="flex justify-end">
                    <a href="{{ path('portal_storage_types_list') }}" class="btn btn-primary">Zobrazit typy</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
