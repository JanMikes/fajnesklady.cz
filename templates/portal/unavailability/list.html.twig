{% extends 'portal/layout.html.twig' %}

{% block title %}Blokování skladu{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Blokování skladu</h1>
        <a href="{{ path('portal_unavailabilities_create') }}" class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Přidat blokování
        </a>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Sklad</th>
                        <th>Období</th>
                        <th>Důvod</th>
                        <th>Vytvořil</th>
                        <th>Vytvořeno</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for unavailability in unavailabilities %}
                        <tr>
                            <td>
                                <div class="font-medium text-gray-900">{{ unavailability.storage.place.name }}</div>
                                <div class="text-sm text-gray-500">{{ unavailability.storage.storageType.name }} - {{ unavailability.storage.number }}</div>
                            </td>
                            <td>
                                <div class="text-gray-900">
                                    {{ unavailability.startDate|date('d.m.Y') }}
                                    {% if unavailability.isIndefinite %}
                                        - <span class="text-amber-600 font-medium">Neomezeně</span>
                                    {% else %}
                                        - {{ unavailability.endDate|date('d.m.Y') }}
                                    {% endif %}
                                </div>
                                {% if unavailability.isActiveOn(today) %}
                                    <span class="badge badge-warning badge-sm">Aktivní</span>
                                {% elseif unavailability.startDate > today %}
                                    <span class="badge badge-info badge-sm">Naplánováno</span>
                                {% else %}
                                    <span class="badge badge-ghost badge-sm">Ukončeno</span>
                                {% endif %}
                            </td>
                            <td class="text-gray-700 max-w-xs truncate" title="{{ unavailability.reason }}">{{ unavailability.reason }}</td>
                            <td class="text-gray-500 text-sm">{{ unavailability.createdBy.fullName }}</td>
                            <td class="text-gray-500 text-sm">{{ unavailability.createdAt|date('d.m.Y H:i') }}</td>
                            <td>
                                <form action="{{ path('portal_unavailabilities_delete', {id: unavailability.id}) }}" method="post" class="inline" onsubmit="return confirm('Opravdu chcete smazat toto blokování?');">
                                    <button type="submit" class="inline-flex items-center text-red-600 hover:text-red-800 text-sm font-medium">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                        Zrušit
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-gray-500 py-8">
                                <svg class="mx-auto h-8 w-8 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <p>Žádné blokování skladu nebylo nalezeno.</p>
                                <a href="{{ path('portal_unavailabilities_create') }}" class="link font-medium mt-2 inline-block">Přidat první blokování</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
