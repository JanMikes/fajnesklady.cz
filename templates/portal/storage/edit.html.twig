{% extends 'portal/layout.html.twig' %}

{% block title %}Upravit sklad - {{ storage.number }}{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Upravit sklad</h1>
        <a href="{{ path('portal_storages_list', {storage_type: storage.storageType.id}) }}" class="btn btn-ghost">Zpět na seznam</a>
    </div>

    <div class="max-w-2xl">
        <div class="card mb-6">
            <div class="card-body">
                <div class="flex items-center gap-4">
                    <div class="flex-shrink-0">
                        <div class="bg-blue-600 text-white rounded-full w-16 h-16 flex items-center justify-center">
                            <span class="text-xl font-bold">{{ storage.number }}</span>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-gray-900">Sklad {{ storage.number }}</h2>
                        <p class="text-gray-600">{{ storage.storageType.place.name }} - {{ storage.storageType.name }}</p>
                        <div class="mt-1">
                            {% if storage.status.value == 'available' %}
                                <span class="badge badge-success">Dostupný</span>
                            {% elseif storage.status.value == 'reserved' %}
                                <span class="badge badge-warning">Rezervovaný</span>
                            {% elseif storage.status.value == 'occupied' %}
                                <span class="badge badge-error">Obsazený</span>
                            {% else %}
                                <span class="badge badge-ghost">Nedostupný</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-4">
                        <label for="{{ form.storageTypeId.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Typ skladu</label>
                        {{ form_widget(form.storageTypeId, {'attr': {'disabled': 'disabled'}}) }}
                        <p class="mt-1 text-sm text-gray-500">Typ skladu nelze změnit</p>
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.number.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Číslo skladu</label>
                        {{ form_widget(form.number) }}
                        {{ form_errors(form.number) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Pozice na mapě</h3>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label for="{{ form.coordinateX.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Pozice X</label>
                            {{ form_widget(form.coordinateX) }}
                            {{ form_errors(form.coordinateX) }}
                        </div>
                        <div>
                            <label for="{{ form.coordinateY.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Pozice Y</label>
                            {{ form_widget(form.coordinateY) }}
                            {{ form_errors(form.coordinateY) }}
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label for="{{ form.coordinateWidth.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Šířka (px)</label>
                            {{ form_widget(form.coordinateWidth) }}
                            {{ form_errors(form.coordinateWidth) }}
                        </div>
                        <div>
                            <label for="{{ form.coordinateHeight.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Výška (px)</label>
                            {{ form_widget(form.coordinateHeight) }}
                            {{ form_errors(form.coordinateHeight) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.coordinateRotation.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Rotace (stupně)</label>
                        {{ form_widget(form.coordinateRotation) }}
                        {{ form_errors(form.coordinateRotation) }}
                        <p class="mt-1 text-sm text-gray-500">Úhel rotace od 0 do 360 stupňů</p>
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_storages_list', {storage_type: storage.storageType.id}) }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Uložit změny</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
