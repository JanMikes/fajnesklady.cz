{% extends 'portal/layout.html.twig' %}

{% block title %}Upravit sklad - {{ storage.number }}{% endblock %}

{% block breadcrumb %}
    {% include 'components/breadcrumb.html.twig' with {breadcrumb_items: [
        {label: 'Místa', url: path('portal_places_list')},
        {label: storage.place.name, url: path('portal_places_detail', {id: storage.place.id})},
        {label: 'Sklady', url: path('portal_storages_list', {placeId: storage.place.id, storage_type: storage.storageType.id})},
        {label: 'Upravit sklad'},
    ]} %}
{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Upravit sklad</h1>

    <div class="max-w-2xl">
        <div class="card mb-6">
            <div class="card-body">
                <div class="flex items-center gap-4">
                    <div class="flex-shrink-0">
                        <div class="bg-primary text-white rounded-full w-16 h-16 flex items-center justify-center">
                            <span class="text-xl font-bold">{{ storage.number }}</span>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-xl font-bold text-gray-900">Sklad {{ storage.number }}</h2>
                        <p class="text-gray-600">{{ storage.place.name }} - {{ storage.storageType.name }}</p>
                        <div class="mt-1">
                            {% if storage.status.value == 'available' %}
                                <span class="badge badge-success">Dostupný</span>
                            {% elseif storage.status.value == 'reserved' %}
                                <span class="badge badge-warning">Rezervovaný</span>
                            {% elseif storage.status.value == 'occupied' %}
                                <span class="badge badge-error">Obsazený</span>
                            {% else %}
                                <span class="badge badge-ghost">Nedostupný</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Existing photos #}
        {% if storage.hasPhotos %}
            <div class="card mb-6">
                <div class="card-body">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Nahrané fotografie</h3>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        {% for photo in storage.photos %}
                            <div class="relative group">
                                <img src="{{ asset('uploads/' ~ photo.path) }}"
                                     alt="Sklad {{ storage.number }}"
                                     class="w-full h-32 object-cover rounded-lg">
                                <form action="{{ path('portal_storage_photo_delete', {storageId: storage.id, photoId: photo.id}) }}"
                                      method="post"
                                      class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity"
                                      onsubmit="return confirm('Opravdu chcete smazat tuto fotografii?');">
                                    <button type="submit"
                                            class="bg-red-600 hover:bg-red-700 text-white rounded-full p-1.5 shadow-lg">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="mb-4">
                        <label for="{{ form.number.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Číslo skladu</label>
                        {{ form_widget(form.number) }}
                        {{ form_errors(form.number) }}
                    </div>

                    {% if form.pricePerWeek is defined and form.pricePerMonth is defined %}
                        <hr class="my-6 border-t border-gray-200">

                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Vlastní ceny</h3>
                        <p class="text-sm text-gray-500 mb-4">Tyto ceny se použijí místo výchozích cen typu skladu. Ponechte prázdné pro použití výchozích cen.</p>

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div>
                                <label for="{{ form.pricePerWeek.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Cena za týden (CZK)</label>
                                {{ form_widget(form.pricePerWeek) }}
                                {{ form_errors(form.pricePerWeek) }}
                            </div>
                            <div>
                                <label for="{{ form.pricePerMonth.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Cena za měsíc (CZK)</label>
                                {{ form_widget(form.pricePerMonth) }}
                                {{ form_errors(form.pricePerMonth) }}
                            </div>
                        </div>
                    {% endif %}

                    {% if form.commissionRate is defined %}
                        <hr class="my-6 border-t border-gray-200">

                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Provize (samofakturace)</h3>
                        <p class="text-sm text-gray-500 mb-4">Procento z platby, které obdrží pronajímatel. Pokud není nastaveno, použije se výchozí provize pronajímatele (nebo 90%).</p>

                        <div class="mb-4">
                            <label for="{{ form.commissionRate.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Provize (%)</label>
                            {{ form_widget(form.commissionRate) }}
                            {{ form_errors(form.commissionRate) }}
                        </div>
                    {% endif %}

                    <hr class="my-6 border-t border-gray-200">

                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Fotografie</h3>

                    <div class="mb-4">
                        <label for="{{ form.photos.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Nahrát fotografie</label>
                        {{ form_widget(form.photos) }}
                        {{ form_errors(form.photos) }}
                        <p class="mt-1 text-sm text-gray-500">Nahrajte fotografie skladu (JPEG, PNG, WebP, max 5 MB každá)</p>
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_storages_list', {placeId: storage.place.id, storage_type: storage.storageType.id}) }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Uložit změny</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
