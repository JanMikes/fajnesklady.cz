{% extends 'portal/layout.html.twig' %}

{% block title %}Sklady{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Sklady</h1>
        <a href="{{ path('portal_storages_create') }}" class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Přidat sklad
        </a>
    </div>

    <div class="card mb-6">
        <div class="card-body">
            <form method="get" action="{{ path('portal_storages_list') }}" class="flex items-end gap-4">
                <div class="flex-1">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Typ skladu</label>
                    <select name="storage_type" class="form-input" onchange="this.form.submit()">
                        <option value="">-- Vyberte typ skladu --</option>
                        {% for storageType in storageTypes %}
                            <option value="{{ storageType.id }}" {{ selectedStorageType and selectedStorageType.id.equals(storageType.id) ? 'selected' : '' }}>
                                {{ storageType.name }} ({{ storageType.dimensionsInMeters }})
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </form>
        </div>
    </div>

    {% if selectedStorageType %}
        <div class="card">
            <div class="card-header bg-gray-50 px-6 py-4 border-b">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-lg font-semibold text-gray-900">{{ selectedStorageType.name }}</h2>
                        <p class="text-sm text-gray-500">{{ selectedStorageType.dimensionsInMeters }}</p>
                    </div>
                    <span class="badge badge-primary">{{ storages|length }} skladů</span>
                </div>
            </div>
            <div class="overflow-x-auto">
                <table class="table table-zebra">
                    <thead>
                        <tr>
                            <th>Číslo</th>
                            <th>Pozice (X, Y)</th>
                            <th>Velikost</th>
                            <th>Rotace</th>
                            <th>Stav</th>
                            <th>Vytvořeno</th>
                            <th>Akce</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for storage in storages %}
                            <tr>
                                <td class="font-medium text-gray-900">{{ storage.number }}</td>
                                <td class="text-gray-500">{{ storage.coordinates.x }}, {{ storage.coordinates.y }}</td>
                                <td class="text-gray-500">{{ storage.coordinates.width }} x {{ storage.coordinates.height }}</td>
                                <td class="text-gray-500">{{ storage.coordinates.rotation }}deg</td>
                                <td>
                                    {% if storage.status.value == 'available' %}
                                        <span class="badge badge-success">Dostupný</span>
                                    {% elseif storage.status.value == 'reserved' %}
                                        <span class="badge badge-warning">Rezervovaný</span>
                                    {% elseif storage.status.value == 'occupied' %}
                                        <span class="badge badge-error">Obsazený</span>
                                    {% else %}
                                        <span class="badge badge-ghost">Nedostupný</span>
                                    {% endif %}
                                </td>
                                <td class="text-gray-500 text-sm">{{ storage.createdAt|date('d.m.Y H:i') }}</td>
                                <td>
                                    <div class="flex items-center gap-2">
                                        <a href="{{ path('portal_storages_edit', {id: storage.id}) }}" class="inline-flex items-center link text-sm font-medium">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                            Upravit
                                        </a>
                                        <form action="{{ path('portal_storages_delete', {id: storage.id}) }}" method="post" class="inline" onsubmit="return confirm('Opravdu chcete smazat tento sklad?');">
                                            <button type="submit" class="inline-flex items-center text-red-600 hover:text-red-800 text-sm font-medium">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                                Smazat
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-gray-500 py-8">Žádné sklady nebyly nalezeny pro tento typ</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body text-center py-12">
                <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                <h3 class="mt-4 text-lg font-medium text-gray-900">Vyberte typ skladu</h3>
                <p class="mt-2 text-sm text-gray-500">Pro zobrazení skladů vyberte typ skladu z nabídky výše.</p>
            </div>
        </div>
    {% endif %}
{% endblock %}
