{% extends 'portal/layout.html.twig' %}

{% block title %}Přidat sklad{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Přidat sklad</h1>
        <a href="{{ path('portal_storages_list') }}" class="btn btn-ghost">Zpět na seznam</a>
    </div>

    <div class="max-w-2xl">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-4">
                        <label for="{{ form.storageTypeId.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Typ skladu</label>
                        {{ form_widget(form.storageTypeId) }}
                        {{ form_errors(form.storageTypeId) }}
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.number.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Číslo skladu</label>
                        {{ form_widget(form.number) }}
                        {{ form_errors(form.number) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Pozice na mapě</h3>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label for="{{ form.coordinateX.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Pozice X</label>
                            {{ form_widget(form.coordinateX) }}
                            {{ form_errors(form.coordinateX) }}
                        </div>
                        <div>
                            <label for="{{ form.coordinateY.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Pozice Y</label>
                            {{ form_widget(form.coordinateY) }}
                            {{ form_errors(form.coordinateY) }}
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label for="{{ form.coordinateWidth.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Šířka (px)</label>
                            {{ form_widget(form.coordinateWidth) }}
                            {{ form_errors(form.coordinateWidth) }}
                        </div>
                        <div>
                            <label for="{{ form.coordinateHeight.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Výška (px)</label>
                            {{ form_widget(form.coordinateHeight) }}
                            {{ form_errors(form.coordinateHeight) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.coordinateRotation.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Rotace (stupně)</label>
                        {{ form_widget(form.coordinateRotation) }}
                        {{ form_errors(form.coordinateRotation) }}
                        <p class="mt-1 text-sm text-gray-500">Úhel rotace od 0 do 360 stupňů</p>
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_storages_list') }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Vytvořit sklad</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
