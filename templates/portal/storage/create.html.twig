{% extends 'portal/layout.html.twig' %}

{% block title %}Pridat sklad{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Pridat sklad</h1>
        <a href="{{ path('portal_storages_list') }}" class="btn btn-ghost">Zpet na seznam</a>
    </div>

    <div class="max-w-2xl">
        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-4">
                        <label for="{{ form.storageTypeId.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Typ skladu</label>
                        {{ form_widget(form.storageTypeId) }}
                        {{ form_errors(form.storageTypeId) }}
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.number.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Cislo skladu</label>
                        {{ form_widget(form.number) }}
                        {{ form_errors(form.number) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Pozice na mape</h3>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label for="{{ form.coordinateX.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Pozice X</label>
                            {{ form_widget(form.coordinateX) }}
                            {{ form_errors(form.coordinateX) }}
                        </div>
                        <div>
                            <label for="{{ form.coordinateY.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Pozice Y</label>
                            {{ form_widget(form.coordinateY) }}
                            {{ form_errors(form.coordinateY) }}
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label for="{{ form.coordinateWidth.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Sirka (px)</label>
                            {{ form_widget(form.coordinateWidth) }}
                            {{ form_errors(form.coordinateWidth) }}
                        </div>
                        <div>
                            <label for="{{ form.coordinateHeight.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Vyska (px)</label>
                            {{ form_widget(form.coordinateHeight) }}
                            {{ form_errors(form.coordinateHeight) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.coordinateRotation.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Rotace (stupne)</label>
                        {{ form_widget(form.coordinateRotation) }}
                        {{ form_errors(form.coordinateRotation) }}
                        <p class="mt-1 text-sm text-gray-500">Uhel rotace od 0 do 360 stupnu</p>
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_storages_list') }}" class="btn btn-ghost">Zrusit</a>
                        <button type="submit" class="btn btn-primary">Vytvorit sklad</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
