{% extends 'portal/layout.html.twig' %}

{% block title %}Navrhnout nové místo{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Navrhnout nové místo</h1>
        <a href="{{ path('portal_places_list') }}" class="btn btn-ghost">Zpět na seznam</a>
    </div>

    <div class="max-w-2xl">
        <div class="card">
            <div class="card-body">
                <p class="text-gray-600 mb-6">Navrhněte nové místo pro skladování. Po odeslání bude návrh posouzen administrátorem a o výsledku budete informováni e-mailem.</p>

                {{ form_start(form) }}
                    <div class="mb-4">
                        <label for="{{ form.name.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Název</label>
                        {{ form_widget(form.name, {}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.address.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Adresa</label>
                        {{ form_widget(form.address, {}) }}
                        {{ form_errors(form.address) }}
                    </div>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label for="{{ form.city.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Město</label>
                            {{ form_widget(form.city, {}) }}
                            {{ form_errors(form.city) }}
                        </div>
                        <div>
                            <label for="{{ form.postalCode.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">PSČ</label>
                            {{ form_widget(form.postalCode, {}) }}
                            {{ form_errors(form.postalCode) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.description.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Popis (nepovinné)</label>
                        {{ form_widget(form.description, {'attr': {'rows': 4}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_places_list') }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Odeslat návrh</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
