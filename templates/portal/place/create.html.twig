{% extends 'portal/layout.html.twig' %}

{% block title %}Přidat místo - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>
{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Přidat místo</h1>
        <a href="{{ path('portal_places_list') }}" class="btn btn-ghost">Zpět na seznam</a>
    </div>

    <div class="max-w-2xl">
        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="mb-4">
                        <label for="{{ form.name.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Název</label>
                        {{ form_widget(form.name, {}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div data-controller="location-picker">
                        <div class="mb-4">
                            <label class="flex items-center gap-2 cursor-pointer">
                                {{ form_widget(form.useMapLocation, {'attr': {
                                    'class': 'checkbox checkbox-sm',
                                    'data-location-picker-target': 'toggle',
                                    'data-action': 'location-picker#toggle',
                                }}) }}
                                <span class="text-sm font-medium text-gray-700">Místo nemá adresu, vybrat na mapě</span>
                            </label>
                        </div>

                        <div data-location-picker-target="addressFields">
                            <div class="mb-4">
                                <label for="{{ form.address.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Adresa</label>
                                {{ form_widget(form.address, {}) }}
                                {{ form_errors(form.address) }}
                            </div>
                        </div>

                        <div data-location-picker-target="mapContainer" class="hidden mb-4">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Poloha na mapě</label>
                            <div data-map class="w-full rounded-lg border border-gray-300" style="height: 350px;"></div>
                            <p class="mt-1 text-sm text-gray-500">Kliknutím na mapu umístěte špendlík, nebo zadejte souřadnice ručně. Špendlík lze přetáhnout.</p>
                            <div class="grid grid-cols-2 gap-4 mt-3">
                                <div>
                                    <label for="{{ form.latitude.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-1">Zeměpisná šířka</label>
                                    {{ form_widget(form.latitude, {'attr': {'data-location-picker-target': 'latitude', 'data-action': 'change->location-picker#coordinateChanged'}}) }}
                                    {{ form_errors(form.latitude) }}
                                </div>
                                <div>
                                    <label for="{{ form.longitude.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-1">Zeměpisná délka</label>
                                    {{ form_widget(form.longitude, {'attr': {'data-location-picker-target': 'longitude', 'data-action': 'change->location-picker#coordinateChanged'}}) }}
                                    {{ form_errors(form.longitude) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label for="{{ form.city.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Město</label>
                            {{ form_widget(form.city, {}) }}
                            {{ form_errors(form.city) }}
                        </div>
                        <div>
                            <label for="{{ form.postalCode.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">PSČ</label>
                            {{ form_widget(form.postalCode, {}) }}
                            {{ form_errors(form.postalCode) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="{{ form.description.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Popis (nepovinné)</label>
                        {{ form_widget(form.description, {'attr': {'rows': 4}}) }}
                        {{ form_errors(form.description) }}
                    </div>

                    {% if form.ownerId is defined %}
                        <div class="mb-4">
                            <label for="{{ form.ownerId.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Vlastník</label>
                            {{ form_widget(form.ownerId, {}) }}
                            {{ form_errors(form.ownerId) }}
                        </div>
                    {% endif %}

                    <hr class="my-6 border-t border-gray-200">

                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Soubory</h3>

                    <div class="mb-4">
                        <label for="{{ form.mapImage.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">Mapa skladu</label>
                        {{ form_widget(form.mapImage, {}) }}
                        <p class="mt-1 text-sm text-gray-500">Obrázek mapy skladu (JPEG, PNG, WebP, max 5 MB)</p>
                        {{ form_errors(form.mapImage) }}
                    </div>

                    <hr class="my-6 border-t border-gray-200">

                    <div class="flex justify-end gap-2">
                        <a href="{{ path('portal_places_list') }}" class="btn btn-ghost">Zrušit</a>
                        <button type="submit" class="btn btn-primary">Vytvořit místo</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
