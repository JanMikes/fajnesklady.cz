{% extends 'portal/layout.html.twig' %}

{% block title %}Místa{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Místa</h1>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('portal_places_create') }}" class="btn btn-primary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Přidat místo
            </a>
        {% else %}
            <a href="{{ path('portal_places_propose') }}" class="btn btn-primary">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Navrhnout nové místo
            </a>
        {% endif %}
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Název</th>
                        <th>Typ</th>
                        <th>Adresa</th>
                        <th>Popis</th>
                        <th>Vytvořeno</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for place in places %}
                        <tr>
                            <td class="font-medium text-gray-900">
                                <a href="{{ path('portal_places_detail', {id: place.id}) }}" class="link">{{ place.name }}</a>
                            </td>
                            <td>
                                <span class="inline-flex items-center gap-1.5 text-xs font-medium">
                                    <span class="w-2.5 h-2.5 rounded-full" style="background-color: {{ place.type.color }}"></span>
                                    {{ place.type.label }}
                                </span>
                            </td>
                            <td class="text-gray-500">{{ place.address ?: place.city }}</td>
                            <td class="text-gray-500 max-w-xs truncate">{{ place.description|default('-') }}</td>
                            <td class="text-gray-500 text-sm">{{ place.createdAt|date('d.m.Y H:i') }}</td>
                            <td>
                                <div class="flex items-center gap-2">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('portal_places_detail', {id: place.id}) }}" class="inline-flex items-center link text-sm font-medium">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                            Detail
                                        </a>
                                    {% else %}
                                        {% if place.id.toRfc4122() in userPlaceAccessIds %}
                                            <a href="{{ path('portal_places_detail', {id: place.id}) }}" class="inline-flex items-center link text-sm font-medium">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                                </svg>
                                                Detail
                                            </a>
                                        {% elseif place.id.toRfc4122() in pendingRequestPlaceIds %}
                                            <span class="inline-flex items-center text-amber-600 text-sm font-medium">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                                Žádost odeslána
                                            </span>
                                        {% else %}
                                            <form action="{{ path('portal_place_request_access', {placeId: place.id}) }}" method="post" class="inline">
                                                <button type="submit" class="inline-flex items-center text-blue-600 hover:text-blue-800 text-sm font-medium">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                                                    </svg>
                                                    Požádat o přístup
                                                </button>
                                            </form>
                                        {% endif %}
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-gray-500 py-8">Žádná místa nebyla nalezena</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
            <div class="flex justify-between items-center mt-4 px-6 py-4 border-t border-gray-200">
                <div class="text-sm text-gray-500">
                    Strana {{ currentPage }} z {{ totalPages }} (celkem {{ totalPlaces }} míst)
                </div>
                <div class="flex space-x-1">
                    {% if currentPage > 1 %}
                        <a href="{{ path('portal_places_list', {page: currentPage - 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Předchozí
                        </a>
                    {% else %}
                        <span class="px-3 py-1 rounded-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                            Předchozí
                        </span>
                    {% endif %}

                    {% set startPage = max(1, currentPage - 2) %}
                    {% set endPage = min(totalPages, currentPage + 2) %}

                    {% if startPage > 1 %}
                        <a href="{{ path('portal_places_list', {page: 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">1</a>
                        {% if startPage > 2 %}
                            <span class="px-3 py-1 text-sm text-gray-400">...</span>
                        {% endif %}
                    {% endif %}

                    {% for page in startPage..endPage %}
                        {% if page == currentPage %}
                            <span class="px-3 py-1 rounded-md border border-accent bg-accent/10 text-sm font-medium text-accent">{{ page }}</span>
                        {% else %}
                            <a href="{{ path('portal_places_list', {page: page}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ page }}</a>
                        {% endif %}
                    {% endfor %}

                    {% if endPage < totalPages %}
                        {% if endPage < totalPages - 1 %}
                            <span class="px-3 py-1 text-sm text-gray-400">...</span>
                        {% endif %}
                        <a href="{{ path('portal_places_list', {page: totalPages}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ totalPages }}</a>
                    {% endif %}

                    {% if currentPage < totalPages %}
                        <a href="{{ path('portal_places_list', {page: currentPage + 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Další
                        </a>
                    {% else %}
                        <span class="px-3 py-1 rounded-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                            Další
                        </span>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
