{% extends 'portal/layout.html.twig' %}

{% block title %}Místa - Admin{% endblock %}

{% block content %}
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Místa</h1>
        <a href="{{ path('portal_places_create') }}" class="btn btn-primary">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Přidat místo
        </a>
    </div>

    <div class="card">
        <div class="overflow-x-auto">
            <table class="table table-zebra">
                <thead>
                    <tr>
                        <th>Název</th>
                        <th>Adresa</th>
                        <th>Popis</th>
                        <th>Vytvořeno</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for place in places %}
                        <tr>
                            <td class="font-medium text-gray-900">{{ place.name }}</td>
                            <td class="text-gray-500">{{ place.address }}</td>
                            <td class="text-gray-500 max-w-xs truncate">{{ place.description|default('-') }}</td>
                            <td class="text-gray-500 text-sm">{{ place.createdAt|date('d.m.Y H:i') }}</td>
                            <td>
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('portal_storage_types_list', {placeId: place.id}) }}" class="inline-flex items-center text-purple-600 hover:text-purple-800 text-sm font-medium" title="Typy skladů">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                                        </svg>
                                        Typy
                                    </a>
                                    <a href="{{ path('portal_storage_canvas', {placeId: place.id}) }}" class="inline-flex items-center text-green-600 hover:text-green-800 text-sm font-medium" title="Editor skladu">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
                                        </svg>
                                        Editor
                                    </a>
                                    <a href="{{ path('portal_places_edit', {id: place.id}) }}" class="inline-flex items-center link text-sm font-medium">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                        </svg>
                                        Upravit
                                    </a>
                                    <form action="{{ path('portal_places_delete', {id: place.id}) }}" method="post" class="inline" onsubmit="return confirm('Opravdu chcete smazat toto místo?');">
                                        <button type="submit" class="inline-flex items-center text-red-600 hover:text-red-800 text-sm font-medium">
                                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                            Smazat
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-gray-500 py-8">Žádná místa nebyla nalezena</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% if totalPages > 1 %}
            <div class="flex justify-between items-center mt-4 px-6 py-4 border-t border-gray-200">
                <div class="text-sm text-gray-500">
                    Strana {{ currentPage }} z {{ totalPages }} (celkem {{ totalPlaces }} míst)
                </div>
                <div class="flex space-x-1">
                    {% if currentPage > 1 %}
                        <a href="{{ path('portal_places_list', {page: currentPage - 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Předchozí
                        </a>
                    {% else %}
                        <span class="px-3 py-1 rounded-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                            Předchozí
                        </span>
                    {% endif %}

                    {% set startPage = max(1, currentPage - 2) %}
                    {% set endPage = min(totalPages, currentPage + 2) %}

                    {% if startPage > 1 %}
                        <a href="{{ path('portal_places_list', {page: 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">1</a>
                        {% if startPage > 2 %}
                            <span class="px-3 py-1 text-sm text-gray-400">...</span>
                        {% endif %}
                    {% endif %}

                    {% for page in startPage..endPage %}
                        {% if page == currentPage %}
                            <span class="px-3 py-1 rounded-md border border-accent bg-accent/10 text-sm font-medium text-accent">{{ page }}</span>
                        {% else %}
                            <a href="{{ path('portal_places_list', {page: page}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ page }}</a>
                        {% endif %}
                    {% endfor %}

                    {% if endPage < totalPages %}
                        {% if endPage < totalPages - 1 %}
                            <span class="px-3 py-1 text-sm text-gray-400">...</span>
                        {% endif %}
                        <a href="{{ path('portal_places_list', {page: totalPages}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ totalPages }}</a>
                    {% endif %}

                    {% if currentPage < totalPages %}
                        <a href="{{ path('portal_places_list', {page: currentPage + 1}) }}" class="px-3 py-1 rounded-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            Další
                        </a>
                    {% else %}
                        <span class="px-3 py-1 rounded-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400 cursor-not-allowed">
                            Další
                        </span>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
